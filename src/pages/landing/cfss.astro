---
import Features from '../../components/widgets/Features.astro';
import Features2 from '../../components/widgets/Features2.astro';
import Features3 from '../../components/widgets/Features3.astro';
import Hero from '../../components/widgets/Hero.astro';
import Stats from '../../components/widgets/Stats.astro';
import Steps2 from '../../components/widgets/Steps2.astro';
import Layout from '../../layouts/PageLayout.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from "../../components/widgets/Content.astro";

const metadata = {
  title: 'Calls and Submissions',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Calls and Submissions"
    title="Call for Special Sessions"
    subtitle="IWAENC has an excellent track record over the years for organizing Special Sessions in new or emerging areas. This year, we are once again seeking innovative, high-quality and potentially interdisciplinary proposals for Special Sessions that complement the regular program of the conference. Special Sessions should be focused and provide both an overview of the state-of-the-art, as well as highlight the most promising research directions, trends and challenges in the proposed field of acoustic and speech signal processing."
    actions={[
      { variant: 'primary', text: 'Download it!', href: 'https://raw.githubusercontent.com/iwaenc2026/iwaenc2026.github.io/main/cfss_IWAENC_2026.pdf', icon: 'tabler:square-rounded-arrow-right' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1647167452643-e5460914b3cd?q=80&w=2338&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: "Cremona's clock tower",
    }}
  />


  <!-- Features Widget *************** -->

  <Features
      id="features"
      tagline="Discover the"
      title="Topics of the Special Sessions"
      columns={2}
      subtitle="The organizing committee solicits proposals for special sessions within the following technical scopes of the conference. For all topics listed below, both model-based and data-driven methods and algorithms are welcome."
      items={[
        {
          title: 'Acoustic echo and feedback suppression',
